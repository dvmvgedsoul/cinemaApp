                    <div class="nav__search">
                        <form action="/search" method="post">
                            <input type="text" class="nav__input" placeholder="Введите название" name="title">
                            <button type="submit" class="nav__btn-search">
                                <img src="img/icons/loopa.png" alt="search">
                            </button>
                        </form>
                    </div>
                    <li><a href="/movie">Фильмы</a></li>
                    <% if (isauth) { %>
                        <li><a href="/personalPage"><img src="img/icons/pfp.png" alt="profile pic"></a></li>
                    <% } else { %>
                        <li><a href="/login">Войти</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
